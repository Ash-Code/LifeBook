<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/patchednew">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"

        android:background="@android:color/holo_green_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Cday"
            android:textSize="30sp"
            android:text="27"
            android:gravity="center"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Cmonth"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:text="Aug" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/Cyear"
                android:textSize="15sp"
                android:layout_marginLeft="4dp"
                android:text="2014" />
        </LinearLayout>
    </LinearLayout>
  <TextView
    android:text="#tags #new entry"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:id="@+id/tags1"
      android:ellipsize="end"
      android:maxLines="1"
      android:layout_marginRight="5dp"
      android:layout_marginTop="4dp"
      android:layout_marginLeft="7dp"
      android:layout_toRightOf="@+id/linearLayout"
      />
    <TextView
        android:text="last edited : 9:45am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="5dp"

        android:layout_below="@+id/tags1"
        android:layout_toRightOf="@+id/linearLayout"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="25sp"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/coverImg"
        android:layout_below="@+id/linearLayout" />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="the descriptionasdsadsadkmadlkadmsadlksamdlksadmaslkasdkjansdkjsandksjadnsakdjnsadkjsandsakjdnsdjknasdjsandkjsadnaskjdnkm"
        android:layout_alignBottom="@+id/coverImg"
        android:ellipsize="end"
        android:maxLines="3"
        android:gravity="left"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/coverImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/coverImg"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />


</RelativeLayout>