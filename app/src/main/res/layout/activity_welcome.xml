<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.RNGD.lifebook.Welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="70sp"

            android:id="@+id/LIFEBOOKTITLE"
            android:text="LifeBook"
            android:layout_gravity="center"
            android:layout_marginTop="100dp" />

        <EditText
            android:background="@drawable/patched2"
            android:id="@+id/pass2"
            android:text="password"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <TextView
            android:text="@string/welcome_remind"
            android:id="@+id/desc"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"

            android:gravity="center" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:text="Access"
                android:id="@+id/accessButton"
                android:layout_width="200dp"
                android:layout_height="60dp"

                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:alpha="0.7"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:onClick="onSubmit"
                android:visibility="invisible" />

            <Button
                android:text="Setup password"
                android:id="@+id/prefButton"

                android:layout_width="200dp"
                android:layout_height="60dp"

                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:alpha="0.7"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:onClick="onPrefs"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>